{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "./frontend",
        "rootDir": "./frontend",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "frontend/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "api",
        "scripts"
    ]
}