{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.app:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Angular: ng serve",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "ng",
            "runtimeArgs": [
                "serve",
                "--host",
                "0.0.0.0"
            ],
            "cwd": "${workspaceFolder}/app",
            "console": "integratedTerminal",
            "presentation": {
                "group": "webpack",
                "reveal": "always"
            }
        }
    ],
    "compounds": [
        {
            "name": "Run FastAPI + Angular serve",
            "configurations": [
                "Python Debugger: FastAPI",
                "Angular: ng serve"
            ]
        }
    ]
}